<h3>スケジュール編集</h3>

 <%= form_with model: @schedule do |f| %>
   <table class="form">
     <tr>
       <th><%= f.label :title ,"タイトル" %></th>
       <td><%= f.text_field :title %></td>
     </tr>

     <tr>
       <th><%= f.label :start ,"開始日" %></th>
       <td><%= f.date_field :start %></td>
     </tr>

     <tr>
       <th><%= f.label :end ,"終了日" %></th>
       <td><%= f.date_field :end %></td>
     </tr>

     <tr>
       <th><%= f.label :all_day ,"終日" %></th>
       <td><%= f.check_box :all_day %><br>終日の場合はチェックを入れます</td>
     </tr>

     <tr>
       <th><%= f.label :memo ,"スケジュールメモ" %></th>
       <td><%= f.text_area :memo, size:"40x20" %></td>
     </tr>
   </table>

   <div>
     <ul>
       <li><%= f.submit "スケジュールの編集を完了する", size:"10x10"%></li>
       <li><%= link_to "スケジュール一覧に戻る", :schedules , class:"link"%></li>
     </ul>
   </div>
 <% end %>